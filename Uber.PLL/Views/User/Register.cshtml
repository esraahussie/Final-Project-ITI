@{
    ViewData["Title"] = "Register as Rider";
}

@model Uber.BLL.ModelVM.User.CreateUser



<style>
    .register-container {
        max-width: 500px;
        margin: 60px auto;
        padding: 40px;
        background-color: #f9f9f9;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        font-family: 'Inter', sans-serif;
    }

        .register-container h2 {
            text-align: center;
            margin-bottom: 30px;
            font-weight: 700;
            color: #111;
        }

        .register-container label {
            display: block;
            margin-bottom: 5px;
            font-weight: 500;
            color: #333;
        }

        .register-container input[type="text"],
        .register-container input[type="email"],
        .register-container input[type="password"],
        .register-container input[type="file"] {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 16px;
        }

        .register-container .car-type-options label {
            display: inline-block;
            margin-right: 15px;
            font-weight: 500;
            cursor: pointer;
        }

        .register-container button {
            width: 100%;
            background-color: #000;
            color: #fff;
            padding: 12px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .register-container button:hover {
                background-color: #222;
            }


    .phone-container {
        display: flex;
        align-items: center;
        border: 1px solid #ccc;
        border-radius: 6px;
        overflow: hidden;
        max-width: 250px;
        font-family: sans-serif;
    }

    .phone-prefix {
        background: #f9f9f9;
        display: flex;
        align-items: center;
        padding: 0 8px;
        font-weight: bold;
        user-select: none;
        white-space: nowrap;
    }

        .phone-prefix img {
            width: 20px;
            height: auto;
            margin-right: 6px;
        }

    .phone-input {
        border: none;
        padding: 8px;
        outline: none;
        flex: 1;
        font-size: 14px;
    }
</style>



<div class="register-container">
    <h2>Register as Rider</h2>
    <form asp-controller ="User" asp-action="RegisterUser" method="post">
        <label>Name</label>
        <input asp-for="Name" type="text" required />

        <label>Email</label>
        <input asp-for="Email" type="email" required />

        <div class="phone-container">
            <div class="phone-prefix">
                <img src="https://flagcdn.com/w20/eg.png" alt="Egypt Flag">
                +20
            </div>
            <input asp-for="PhoneNumber" id="phone" class="phone-input" type="tel"
                   inputmode="numeric"
                   pattern="^0(10|11|12|15)\d{8}$"
                   placeholder="01012345678" maxlength="11" required>
        </div>


        <label>Gender</label>
        <div class="car-type-options">
            <label><input asp-for="Gender" type="radio" value="Male" required />Male</label>
            <label><input asp-for="Gender" type="radio" value="Female" />Female</label>
        </div>


        <label>Date of Birth</label>
        <input asp-for="DateOfBirth" type="date" min="1925-01-01" max="2007-12-31" required>


        <label>Password</label>
        <input asp-for="Password" type="password" minlength="6" required />


        <button type="submit">Register</button>
    </form>
</div>



<script>
    const phoneInput = document.getElementById('phone');

    // Prevent non-digit input
    phoneInput.addEventListener('input', () => {
        phoneInput.value = phoneInput.value.replace(/\D/g, '');
    });
</script>
