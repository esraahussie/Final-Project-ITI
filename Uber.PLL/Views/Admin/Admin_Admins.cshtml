<header>
    <div class="nav-left">
        <h1>Uber</h1>
    </div>
</header>

<div class="page-title">Admins Management</div>
<table id="Admins" class="display">
    <thead class="thead-dark">
        <tr>
           <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Date of Birth</th>
            <th>Deleted</th>
        </tr>
    </thead>
    <tbody id="ridersTable">
        @foreach (var admin in Model)
        {
            <tr data-id="@admin.Id">

                <td>@admin.Name</td>
                <td>@admin.Email</td>
                <td>@("0" + admin.PhoneNumber)</td>
                <td>@admin.DateOfBirth.ToString("dd MMM yyyy")</td>
                <td >
                    @if (admin.IsDeleted == true)
                    {
                        <span class="badge bg-danger">Deleted</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Available</span>
                    }
                </td>
               
            </tr>
        }
    </tbody>
</table>

<script>
    function deleteAdmin(id) {
        if (confirm("Are you sure you want to delete this Admin?")) {
            fetch(`/Admin/DeleteAdmin/${id}`, { method: 'POST' })
                .then(response => {
                    if (response.ok) {
                        document.querySelector(`tr[data-id='${id}']`).remove();
                    } else {
                        alert("Error deleting Admin.");
                    }
                });
        }
    }
</script>


