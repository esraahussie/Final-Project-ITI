
@model IEnumerable<Uber.BLL.ModelVM.Ride.RideVM>
@{
    ViewData["Title"] = "Rides Management";
}

<style>
    header {
        background: #000;
        color: #fff;
        padding: 20px 50px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-left {
        display: flex;
        align-items: center;
        gap: 30px;
    }

        .nav-left h1 {
            margin: 0;
            font-size: 24px;
        }

        .nav-left a {
            color: #fff;
            text-decoration: none;
            font-weight: 500;
        }

    .nav-right a {
        margin-left: 20px;
        color: #fff;
        text-decoration: none;
        font-weight: 500;
    }

    .nav-right .signup-btn {
        background: #fff;
        color: #000;
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: bold;
    }

    .page-title {
        text-align: center;
        font-size: 32px;
        font-weight: bold;
        color: #000;
        margin: 40px 0 20px 0;
    }

    table {
        width: 90%;
        margin: auto;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
        box-shadow: 0px 4px 12px rgba(0,0,0,0.1);
        border-radius: 10px;
        overflow: hidden;
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
        vertical-align: middle;
    }

    th {
        background-color: #000;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f8f8f8;
    }

    tr:hover {
        background-color: #f1f1f1;
    }
</style>





<header>
    <div class="nav-left">
        <h1>Uber</h1>
    </div>
</header>

<div class="page-title">Rides Management</div>

<table id="Admins" class="display">
    <thead class="thead-dark">
      <tr>
            <th>ID</th>
            <th>Driver</th>
            <th>Rider</th>
            <th>Price</th>
            <th>Ride Time</th>
            <th>Duration</th>
            <th>Distance</th>
            <th>Status</th>

        </tr>
    </thead>
    <tbody>
                @foreach (var ride in Model)
            {
                <tr>
                <td>@ride.ID</td>
                <td>@ride.DriverName</td>
                <td>@ride.RiderName</td>

                <td>@('$' + ride.Price.ToString("F2"))</td>
                <td>@ride.CreatedAt.ToString()</td>
                <td>@(ride.Duration + " Min")</td>
                <td>@(ride.Distance + "Km")</td>
                <td>
                        @if (ride.Status == Uber.DAL.Enums.RideStatus.Rejected || ride.Status == Uber.DAL.Enums.RideStatus.Cancelled)
                        {
                            <span class="badge bg-danger">@ride.Status</span>
                        }
                        else if (ride.Status == Uber.DAL.Enums.RideStatus.InProgress || ride.Status == Uber.DAL.Enums.RideStatus.Pending)
                        {
                            <span class="badge bg-warning">@ride.Status</span>
                        }
                        else if (ride.Status == Uber.DAL.Enums.RideStatus.Completed || ride.Status == Uber.DAL.Enums.RideStatus.Accepted)
                        {
                            <span class="badge bg-success">@ride.Status</span>
                        }
                        else if (ride.Status == Uber.DAL.Enums.RideStatus.DriverWaiting)
                        {
                            <span class="badge bg-info">@ride.Status</span>
                        }
                    </td>
                </tr>
            }

        
    </tbody>
</table>
