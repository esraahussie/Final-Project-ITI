@model Uber.BLL.ModelVM.Account.ForgotPasswordVM

<header>
    <div class="nav-left">
        <h1>Uber</h1>
    </div>
</header>
<div class="forgot-password-container">
    <h2 class="forgot-password-title">Forgot Password</h2>
    <hr class="divider" />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="forgot-password-form">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>
</div>

<style>
    header {
        background: #000;
        color: #fff;
        padding: 20px 50px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-left {
        display: flex;
        align-items: center;
        gap: 30px;
    }

.forgot-password-container {
    max-width: 500px;
    margin: 50px auto;
    padding: 30px;
    background-color: #f9f9f9;
    border-radius: 12px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

.forgot-password-title {
    text-align: center;
    color: #007bff;
    margin-bottom: 10px;
    font-weight: 600;
}

.divider {
    border: 0;
    height: 1px;
    background: #ddd;
    margin-bottom: 30px;
}

.forgot-password-form .form-label {
    font-weight: 500;
}

.forgot-password-form .form-control {
    border-radius: 8px;
    padding: 10px;
    font-size: 14px;
}

.forgot-password-form .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
    padding: 10px;
    font-size: 16px;
    border-radius: 8px;
    transition: background 0.3s ease;
}

.forgot-password-form .btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}
</style>
