@model Uber.BLL.ModelVM.Account.LoginVM
@{
    ViewData["Title"] = "Login";
}
<style>
    .login-container {
        max-width: 400px;
        margin: 60px auto;
        padding: 40px;
        background-color: #f9f9f9;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        font-family: 'Inter', sans-serif;
    }

        .login-container h2 {
            text-align: center;
            margin-bottom: 30px;
            font-weight: 700;
            color: #111;
        }

        .login-container label {
            display: block;
            margin-bottom: 5px;
            font-weight: 500;
            color: #333;
        }

        .login-container input {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 16px;
        }

        .login-container button {
            width: 100%;
            background-color: #000;
            color: #fff;
            padding: 12px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .login-container button:hover {
                background-color: #222;
            }

        .login-container .forgot-link {
            display: block;
            text-align: center;
            margin-top: 15px;
            color: #555;
            text-decoration: none;
            font-size: 14px;
        }

            .login-container .forgot-link:hover {
                color: #000;
                text-decoration: underline;
            }

    .small-error {
        color: red;
        font-size: 15px;
        margin-bottom: 8px;
        display: block;
    }

    .social-btn {
        display: block;
        padding: 10px;
        border-radius: 8px;
        text-align: center;
        font-weight: bold;
        margin-bottom: 10px;
        text-decoration: none;
        background: white;
        border: 1px solid #ccc;
        color: #444;
    }

    .facebook-btn i {
        color: #3b5998;
    }

    .google-btn i {
        color: #DB4437;
    }

    .divider {
        text-align: center;
        margin: 20px 0;
        color: #777;
        font-weight: bold;
    }
</style>

<div class="login-container">
    <h2>Login @ViewBag.Role</h2>
    <form asp-controller="Account" asp-action="Login" method="post">
        <input type="hidden" name="Role" value="@ViewBag.Role" />
        <label>Email</label>
        <input asp-for="Email" type="email" required />
        <label>Password</label>
        <input asp-for="Password" type="password" required />
        @if (!string.IsNullOrEmpty(ViewBag.LoginError))
        {
            <span class="small-error">@ViewBag.LoginError</span>
        }
        <button type="submit">Login</button>
    </form>
    <a asp-action="ForgotPassword" class="forgot-link">Forgot Password?</a>

    <div class="divider">OR</div>
    <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
        <div>
            @foreach (var provider in Model.ExternalLogins)
            {
                var btnClass = provider.Name == "Facebook" ? "facebook-btn" : "google-btn";
                var iconClass = provider.Name == "Facebook" ? "fab fa-facebook-f" : "fab fa-google";

                <button type="submit" class="social-btn @btnClass"
                        name="provider" value="@provider.Name"
                        title="Log in using your @provider.DisplayName account">
                    <i class="@iconClass" style="margin-right:8px;"></i> Continue with @provider.DisplayName
                </button>
            }
        </div>
    </form>

</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">